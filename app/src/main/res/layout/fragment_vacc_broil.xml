<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_broilers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.poultry_manager.VaccBroilFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Broilers Only Vaccination"
        android:textStyle="italic"
        android:textSize="17sp"
        android:id="@+id/heading"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_weight="1"
        android:gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drugs and Vaccines"
        android:textStyle="bold"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="15sp"
        />
</TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 1-Day 6"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gentadox + Vitamin"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                />
           </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 7"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1st Dose of Gumboro Vaccine"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 weeks"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2nd Dose of Gumboro Vaccine"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 weeks"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lasota Vaccine"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4-5 weeks"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anti-Coccidial Drug"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                />
        </TableRow>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vaccination3"
            android:textAlignment="inherit"
            android:textSize="15sp"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="40sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vaccination5"
            android:textAlignment="inherit"
            android:textStyle="italic"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="15sp"
            />

    </TableLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nutrition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.poultry_manager.NutritionFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nutrition"
        android:textStyle="italic"
        android:textSize="17sp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nutrients for birds that must be balanced in the feed include:"
                android:textSize="17sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Carbohydrates-from maize guinea corn,wheat offal."
                android:textSize="17sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Protein-from full fat soya,soya cake or meal,groundnut cake,palm kernel cake,e.t.c."
                android:textSize="17sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Fats=From palm oil,soya beans."
                android:textSize="17sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Vitamins=Fats and water soluble forms(A,B,C,D,etc)"
                android:textSize="17sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Minerals=phosphorus,calcium potassium,magnesium,etc.Bone meal,limestone,etc are forms of minerals."
                android:textSize="17sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Artificial amino acids-methionine,lysine."
                android:textSize="17sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. Water this should be clean.Water makes 65% of eggs,and 85% of one week old chicks."
                android:textSize="17sp"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Birds water need are 2 times per gramme of feed eaten."
                android:textSize="17sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" NB:Rely on feeds from a competent feed miller .Recruit a sound nutritionist if you must make your own feeds.
 Poor mixing can cause drop in lay .Disease from empty bags and dirty environment,lack of flexibility on choice of raw materials and reformulating,among other reasons can cause serious losses."
                android:textSize="17sp"
                />


        </LinearLayout>
    </ScrollView>
</LinearLayout>

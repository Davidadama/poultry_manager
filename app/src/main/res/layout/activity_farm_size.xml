<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
               xmlns:mask="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    >

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Farm Size"
       android:textStyle="italic"
       android:textSize="17sp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >
    <EditText
        android:id="@+id/identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="ID:2(required field for updating)"
        android:lines="1"
        android:gravity="left"
        android:imeOptions="actionDone"
        android:ems="20"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="23dp" />
    //purchase date entry
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purchase date:"
            android:textSize="19sp"
            />
        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/datepurchased"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:typeface="monospace"
            android:hint="10/09/2018"
            android:lines="1"
            android:imeOptions="actionDone"
            android:gravity="center" >

        </EditText>
        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    //source of birds entry
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source of Birds:"
            android:textSize="19sp"
            />
        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/Source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Jatex farm"
            android:lines="3"
            android:imeOptions="actionNext"
            android:gravity="center"
            />

    </LinearLayout>

    //price per chick entry
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price per pullet:"
            android:textSize="19sp"
            />
        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:hint="#130"
            android:lines="1"
            android:imeOptions="actionNext"
            android:gravity="center"
            />

    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Number of Birds:"
           android:textSize="19sp"
           />
       <Space
           android:layout_width="12dp"
           android:layout_height="wrap_content" />

       <EditText
           android:id="@+id/frmsize"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:inputType="text"
           android:hint="1500 0r 750"
           android:lines="2"
           android:gravity="center"
           android:imeOptions="actionNext"
           />

   </LinearLayout>

    //date purchased entry
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/Total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:lines="0"
            />



    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="139dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        // save button

        <Button
            android:text="Save"
            android:textSize="13sp"
            android:id="@+id/savebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="SaveClicked"
            android:layout_gravity="center_horizontal"
            android:ems="30"
            android:layout_weight="1"

            />
        <Button
            android:text="update"
            android:textSize="13sp"
            android:id="@+id/updatebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="updateClicked"
            android:layout_gravity="center_horizontal"
            android:ems="30"
            android:layout_weight="1"

            />
    </LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>
